{
  "name": "etl-web-server",
  "version": "0.1.0",
  "author": "Emre Can Çorapçı",
  "main": "src/server.ts",
  "type": "module",
  "engines": {
    "node": "22.4.0"
  },
  "scripts": {
    "start": "pnpm build && node ./server.cjs",
    "start:pm2": "pnpm build && pm2 start ./server.cjs --watch --log ../logs/pm2_log.txt --time",
    "restart:pm2": "pm2 stop 0 && pnpm start:pm2",
    "build": "node esbuild.js",
    "dev": "tsx src/main.ts"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.4",
    "@typescript-eslint/parser": "^8.5.0",
    "esbuild": "^0.23.1",
    "eslint": "8.57.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
