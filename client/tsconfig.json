{
  "extends": ["astro/tsconfigs/strictest"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",

    "verbatimModuleSyntax": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/**/*.astro", "tailwind.config.ts"],
}